import json

progress = {
    "level": 3,
    "health": 80,
    "items": ["меч", "щит"]
}

# 2. Сохраняем в файл
with open("save.json", "w", encoding="utf-8") as file:
    json.dump(progress, file) 

# 3. Загружаем обратно
with open("save.json", "r", encoding="utf-8") as file:
    loaded_data = json.load(file)
    print("\n⚔️ Загруженный прогресс:")
    print(f"Уровень: {loaded_data['level']}")
    print(f"Предметы: {', '.join(loaded_data['items'])}")
