products = ["–∫–æ—Ñ–µ–º–∞—à–∏–Ω–∫–∞", "–ß–∞–π–Ω–∏–∫", "–±–õ–ï–ù–î–ï–†"]#(—Å–ø–∏—Å–æ–∫ –¥–∞–Ω–Ω—ã—Ö —Å 1 –ø–æ 3) —É—Å—Å–ª–æ–≤–∏–µ 
base_price = [100000, 4500, 7000]# —Ü–µ–Ω–∞ —Ç–æ–≤–∞—Ä–∞
is_hot = [True, False, True]  # –¥–∞ –∏–ª –∏ –Ω–µ—Ç(–µ—Å—Ç—å –∏–ª–∏ –Ω–µ—Ç)

def calculate_discount():
    final_prices = []  # –°–æ–∑–¥–∞—ë–º —Ñ—É–Ω–∫—Ü–∏—é –∏ –ø—É—Å—Ç–æ–π —Å–ø–∏—Å–æ–∫ –¥–ª—è —Ö—Ä–∞–Ω–µ–Ω–∏—è —Ü–µ–Ω –ø–æ—Å–ª–µ —Å–∫–∏–¥–∫–∏)
    for i in range(len(products)):
        if is_hot[i]:
            discounted = base_price[i] * 0.75
            final_prices.append(discounted)
        else:
            final_prices.append(base_price[i])
    
    total_cost = sum(final_prices)
    
    if len(products) >= 2:
        total_cost *= 0.9
    
    return total_cost, final_prices  # –¢–µ–ø–µ—Ä—å –≤–æ–∑–≤—Ä–∞—â–∞–µ–º –∏ –∏—Ç–æ–≥, –∏ —Å–ø–∏—Å–æ–∫ —Ü–µ–Ω

#  –ü–æ–ª—É—á–µ–Ω–∏–µ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–æ–≤
total_cost, final_prices = calculate_discount()

print(f"–°—Ç–æ–∏–º–æ—Å—Ç—å –∑–∞–∫–∞–∑–∞: {total_cost:.2f} —Ä—É–±.")  # –§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ –¥–ª—è –¥–µ–Ω–µ–≥
print("\n–í–∞—à —á–µ–∫:")
for idx, product in enumerate(products):
    status = "–ì–æ—Ä—è—á–∏–π" if is_hot[idx] else "–û–±—ã—á–Ω—ã–π"  # –ë–æ–ª–µ–µ –ø–æ–Ω—è—Ç–Ω—ã–µ —Å—Ç–∞—Ç—É—Å—ã
    original_price = base_price[idx]
    final_price = final_prices[idx]
    
    if is_hot[idx]:
        print(f"{status} '{product}': {original_price} —Ä—É–±. -> {final_price:.2f} —Ä—É–±. (—Å–∫–∏–¥–∫–∞ 25%)")
    else:
        print(f"{status} '{product}': {original_price} —Ä—É–±.")
    
if len(products) >= 2:
    print(f"\n–î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω–∞—è —Å–∫–∏–¥–∫–∞ 10% –∑–∞ –ø–æ–∫—É–ø–∫—É {len(products)} —Ç–æ–≤–∞—Ä–æ–≤")
    print(f"–ò—Ç–æ–≥–æ–≤–∞—è —Å—É–º–º–∞: {total_cost:.2f} —Ä—É–±.")





C–ø–∏—Å–æ–∫ –¥–µ–ª
with open("tasks.txt", "w", encoding="utf-8") as file:
    file.write("–ö—É–ø–∏—Ç—å –º–æ–ª–æ–∫–æ\n")
    file.write("–ü–æ–∑–≤–æ–Ω–∏—Ç—å –º–∞–º–µ\n")


print("üìù –°–ø–∏—Å–æ–∫ –¥–µ–ª:")
with open("tasks.txt", "r", encoding="utf-8") as file:
    for line in file:
        print("- " + line.strip())  #

new_task = input("\n+ –î–æ–±–∞–≤–∏—Ç—å –∑–∞–¥–∞—á—É: ")
with open("tasks.txt", "a", encoding="utf-8") as file:  
    file.write(new_task + "\n")

